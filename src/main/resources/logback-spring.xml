<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 阻止logback打印状态信息 -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <property name="app_name" value="callcenter_queue" />
    <!-- 要放置在data目录下 -->
    <property name="log_home" value="logs"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %c %level [%thread] :%line %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %c %level [%thread] :%line %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件大于1024MB时生成一个新的日志文件，每天生成一个新的日志文件, 最多保留5个日志文件-->
            <fileNamePattern>${log_home}/${app_name}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>5</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>512MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <root level="debug">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

    <logger name="org.springframework" level="error" />
    <logger name="org.springframework.web" level="error" />
    <logger name="org.mybatis.spring" level="error"/>
    <logger name="org.kingnetdc.mybatis" level="error" />

    <logger name="com.kingnetdc.callcenter.queue" level="debug" />

</configuration>
